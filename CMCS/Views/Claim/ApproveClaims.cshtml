@model IEnumerable<CMCS.Models.ClaimForm>

@{
    ViewData["Title"] = "Approve Claims";
}

<div class="container">
    <h2 class="mt-4">Claims Pending Approval</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Lecturer</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Tittle</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("C")</td>
                        <td><span class="badge bg-info">Verified</span></td>
                        <td>@claim.Notes</td>
                        <td>@claim.User.FullName</td>
                        <td>
                            <form method="post" asp-action="ApproveClaim" asp-route-id="@claim.Id">
                                <button type="submit" class="btn btn-primary btn-sm">Approve</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No claims pending approval.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
